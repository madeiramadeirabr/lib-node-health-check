{
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2020",
    "outDir": "dist",
    "plugins": [
      {
        "transform": "ts-auto-mock/transformer",
        "cacheBetweenTests": false
      }
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*",
    ".idea/**/*",
    ".husky/**/*",
    ".github/**/*"
  ]
}