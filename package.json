{
  "name": "lib-node-health-check",
  "version": "0.0.0",
  "description": "Health check lib for nodejs",
  "main": "dist/src/index.js",
  "scripts": {
    "dev": "nodemon --watch src/**/*.ts --exec ts-node ./src/app.ts",
    "build": "tsc",
    "start": "node ./dist/app.js",
    "lint": "eslint --fix --quiet src/**/*.ts",
    "format": "prettier --loglevel silent --write src/**/*.ts",
    "test": "set ENVIRONMENT_NAME=test && jest",
    "test:watch": "set ENVIRONMENT_NAME=test && jest --watch",
    "test:coverage": "set ENVIRONMENT_NAME=test && jest --coverage"
  },
  "lint-staged": {
    "**/*.ts": [
      "eslint --fix"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": [
        "ts-jest",
        {
          "compiler": "ttypescript"
        }
      ]
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coveragePathIgnorePatterns": [
      "config/*",
      "test/fixture/*",
      "container.ts"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "setupFiles": [
      "<rootDir>/../test/setup/jest-ts-auto-mock-config.ts"
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "jest-ts-auto-mock": "^2.1.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "ts-auto-mock": "^3.7.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "ttypescript": "^1.5.15",
    "typescript": "^5.1.3",
    "typescript-eslint-parser": "^22.0.0"
  }
}
